params {
  input  = null
  outdir = "results"
  pybin  = "python3"
}

// nextflow run main.nf -profile local
// nextflow run main.nf -profile docker

profiles {
  local {
    process.executor = 'local'
    docker.enabled = false
    conda.enabled = false
  }

  docker {
    process.executor = 'local'
    docker.enabled = true
    conda.enabled = false
    process.container = 'neurobridge:1'
  }
}